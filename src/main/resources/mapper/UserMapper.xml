<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zbin.cisp.dao.UserMapper">
  <select id="selectByUsername" resultType="com.zbin.cisp.domain.User">
      select * from user where username = #{username}
  </select>

  <insert id="insert" useGeneratedKeys="true" keyProperty="id">
    insert into user(username,password,reg_time,nickname,gender)
    values (#{username},#{password},now(),#{nickname},#{gender})
  </insert>

  <select id="countAll" resultType="integer">
    select count(1) from user;
  </select>

  <select id="getUsers" resultType="com.zbin.cisp.domain.User">
    select * from user order by reg_time desc;
  </select>

  <update id="updateUser" parameterType="com.zbin.cisp.domain.User">
    update user set
    nickname = #{nickname},
    gender = #{gender},
    signature= #{signature}
    where username = #{username}
  </update>
</mapper>